<Application x:Class="mvvm_navigation.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:view="clr-namespace:mvvm_navigation.View"
             xmlns:viewmodel="clr-namespace:mvvm_navigation.ViewModel"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodel:Page1ViewModel}">
            <view:Page1 />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:Page2ViewModel}">
            <view:Page2 />
        </DataTemplate>
    </Application.Resources>
</Application>